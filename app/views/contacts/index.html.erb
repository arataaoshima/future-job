<h1 class="text-center top-message-wrapper">お問い合わせ一覧</h1>
<div class="container">
<table class="table">
  <thead>
    <tr>
      <th>お問い合わせ日</th>
      <th>Email</th>
      <th>Type</th>
      <th>Content</th>
      <th>Solved?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
    <% if contact.solved && contact.solved == true %>
    <tr class="text-primary">
    <% else %>
    <tr>
    <% end %>
        <td><%= contact.created_at.in_time_zone("Tokyo").to_datetime.strftime('%y-%m-%d') %></td>
        <td><%= contact.email %></td>
        <td><%= contact.contact_type %></td>
        <td><%= contact.content %></td>
        <td><%= contact.solved %></td>
        <td><%= link_to 'Show', contact, class:"btn btn-secondary text-white btn-sm" %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact), class:"btn btn-success text-white btn-sm" %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger text-white btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
