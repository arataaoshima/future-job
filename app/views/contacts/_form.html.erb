<%= form_with(model: contact, local: true) do |form| %>
  <% if contact.errors.any? %>
  <div id="error_explanation" class="bg-white mx-auto border border-0">
      <h5 class="danger err-msg-box">以下のエラーを修正してフォームを再送して下さい</h5>

      <ul>
        <% contact.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if current_user && current_user.admin != true %>
  <div class="field form-label">
    <%= form.label :email,"Eメールアドレス" %><br>
    <%= current_user.email %>
  </div>


  <% else %>
  <div class="field form-label">
    <%= form.label :email,"Eメールアドレス" %>
    <%= form.email_field :email, class:"form-control"  %>
  </div>
  <% end %>

  <div class="field form-label">
    <%= form.label :contact_type,"お問い合わせタイプ" %><br>
    <%= form.select :contact_type, [["エラー・トラブルについて", "エラー・トラブルについて"], ["お支払いについて", "お支払いについて"], ["コース内容について", "コース内容について"], ["その他", "その他"]], include_blank: "-選択して下さい-", class:"contact-drop-down" %>
  </div>

  <div class="field form-label">
    <%= form.label :content, "メッセージ" %>
    <%= form.text_area :content, class:"form-control" ,rows:"7"  %>
  </div>

<% if current_user && current_user.admin == true %>
  <div class="field form-label">
    <%= form.label :solved,"解決済？" %><br>
   <%= form.select :solved, [['要対応',0],['解決済',1]], { include_blank: false, selected: 0 } %>
  </div>
<% end %>

  <div class="actions text-center form-label top-message-wrapper">
    <%= form.submit "送信する", class:"btn btn-outline-success" %>
  </div>
<% end %>
