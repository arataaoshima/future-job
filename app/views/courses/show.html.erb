<h1 class="text-center">
  <%= @course.title %>
</h1>

<p class="text-center">
  <%= image_tag @course.image.to_s, height:"320px" %>
</p>

<h2 class="text-center">レクチャー一覧</h2>

<% @course.lectures.each do |lecture| %>
  <div class="card">
    <a href="/lectures/<%= lecture.id %>" class="card-body text-dark lecture-card">
      <h5><%= lecture.name %></h5></a>
   </div>
<% end %>


<% if current_user.admin == true %>
<div class='text-center'>
<%= link_to 'このコースを編集', edit_course_path(@course) %> |
<%= link_to 'コース一覧', courses_path %>
</div>
<% end %>
