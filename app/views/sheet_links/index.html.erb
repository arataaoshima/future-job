<p id="notice"><%= notice %></p>

<h1>Sheet Links</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th>Lecture</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sheet_links.each do |sheet_link| %>
      <tr>
        <td><%= sheet_link.title %></td>
        <td><%= link_to "Sheet", sheet_link.url, target: :_blank, rel: "noopener noreferrer" %></td>
        <td><%= link_to sheet_link.lecture.name, lecture_path(sheet_link.lecture) %></td>
        <td><%= sheet_link.sheet_type %></td>
        <td><%= link_to 'Show', sheet_link %></td>
        <td><%= link_to 'Edit', edit_sheet_link_path(sheet_link) %></td>
        <td><%= link_to 'Destroy', sheet_link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

