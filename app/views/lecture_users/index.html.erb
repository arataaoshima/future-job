<h1 class="text-center top-message-wrapper">レクチャー完了管理</h1>

<div class="container">
<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Lecture</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lecture_users.each do |lecture_user| %>
      <tr>
        <td><%= lecture_user.user.username %></td>
        <td><%= lecture_user.lecture.name %></td>
        <td><%= lecture_user.lecture.course.title %></td>
        <td><%= link_to 'Show', lecture_user %></td>
        <td><%= link_to 'Edit', edit_lecture_user_path(lecture_user) %></td>
        <td><%= link_to 'Destroy', lecture_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<% if user_signed_in? && current_user.admin == true %>
<div class='text-center'>
<%= link_to 'New Lecture User', new_lecture_user_path, class:"btn btn-outline-success"  %>
</div>
<% end %>
