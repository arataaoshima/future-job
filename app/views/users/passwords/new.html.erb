<div class="login-page-wrapper">
<h2 class="text-center top-message-wrapper">パスワード再設定ページ</h2>
<div class="container">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <div class="actions text-center login-btn-wrapper">
    <%= f.submit "Send me reset password instructions", class:"btn btn-outline-primary"  %>
  </div>
<% end %>
  <div class="actions login-btn-wrapper">
<%= render "users/shared/links" %>
  </div>
</div>
</div>
