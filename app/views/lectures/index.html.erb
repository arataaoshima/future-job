<h1 class="text-center top-message-wrapper">Lectures</h1>
<div class="container">
<table class="table">
  <thead>
    <tr>
      <th>レクチャーネーム</th>
      <th>所属コース</th>
      <th>順番</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody  class="link-no-effect">
    <% @lectures.each do |lecture| %>
      <tr>
        <td><%= link_to lecture.name, lecture_path(lecture) %></td>
        <td><%= link_to lecture.course.title, course_path(lecture.course), class:"btn btn-outline-secondary btn-sm"  %></td>
        <td><%= lecture.order %></td>
        <td><%= link_to '編集', edit_lecture_path(lecture), class:"btn btn-outline-success btn-sm"  %></td>
        <td><%= link_to 'Destroy', lecture, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class='text-center'>
<%= link_to '新しくレクチャーを作る', new_lecture_path, class:"btn btn-outline-success mx-auto"  %>
</div>
</div>
