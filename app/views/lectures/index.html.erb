<p id="notice"><%= notice %></p>

<h1 class="text-center">Lectures</h1>

<table class="table">
  <thead>
    <tr>
      <th>レクチャーネーム</th>
      <th>所属コース</th>
      <th>順番</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @lectures.each do |lecture| %>
      <tr>
        <td><%= lecture.name %></td>
        <td><%= link_to lecture.course.title, course_path(lecture.course) %></td>
        <td><%= lecture.order %></td>
        <td><%= link_to 'Show', lecture %></td>
        <td><%= link_to '編集', edit_lecture_path(lecture) %></td>
        <td><%= link_to 'Destroy', lecture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しくレクチャーを作る', new_lecture_path, class:"btn btn-outline-success mx-auto"  %>
